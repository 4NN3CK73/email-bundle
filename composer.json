{
    "name": "azine/email-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 Bundle to send html- & txt-emails (notification about events on your web-app or newsletters etc. scheduled/aggregated) to your users.",
    "keywords": ["email", "newsletter", "notification", "updates", "email web view", "mailgun"],
    "homepage": "https://github.com/azine/email-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Azine IT Services AG",
            "email": "github@azine-it.ch"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": ">=2.1",
        "symfony/console": ">=2.1",
        "symfony/finder": ">=2.1",
        "symfony/twig-bundle": ">=2.1",
        "swiftmailer/swiftmailer": ">=2.1",
        "doctrine/orm": ">=2.0",
        "monolog/monolog": ">=1.6",
        "friendsofsymfony/user-bundle": "2.0.x-dev",
        "twig/extensions": "1.0.*"        
    },
    "autoload": {
        "psr-0": { "Azine\\EmailBundle": "" }
    },
    "minimum-stability": "dev",
    "target-dir": "Azine/EmailBundle"
}
